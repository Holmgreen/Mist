package Entity;

import javax.imageio.ImageIO;

import Audio.JukeBox;

public class Consume extends Spell{

	//Consumes an orb in the inventory and increments the orb count.
    public Consume() {
    super();
    cd = 1;
	castingTime = 0;
	damage = 10;
	stringLength = 21;
	range = 80;
	init();
	
	try {
	    icon = ImageIO.read(getClass().getResourceAsStream("/Objects/shadow.png"));
	}catch(Exception e) {e.printStackTrace();}
	
    }

    public void use(Ooru ooru) {
    	if(ooru.getInventory().bSearchAndDestroy(UserInterface.CONSUME, 1)){
    		setCooldown();
    		ooru.incrementOrbs();
    		//Change this
    		JukeBox.play("ooruwhitedmg");
    	}
    }
    
    public int getRange() {
	return range;
    }

    public String getInfoToString() {
	return "Does aoe damage\nwithin specific range";
    }
    
    
}
